    !window.jQuery && document.write("<script type=\"text\/javascript\" src=\"javascripts\/jquery-1.4.4.min.js\"><\/script>");
    </script>

    <%= yield :javascript %>

    <script type='text/javascript'>
      $(document).ready(function(){
          $(".tweet").tweet({
                username: "agendatech",
                join_text: "auto",
                avatar_size: 32,
                count: 1,
                loading_text: "carregando tweets..."
                });
          });
          FB.api(
              {
              method: 'fql.multiquery',
              queries:{
                query1: 'select text,fromid,time from comment where object_id in (select comments_fbid from link_stat where url in (<%=fb_urls_dos_eventos%>)) order by time desc limit 3',
                query2: 'select pic_square,uid from user where uid in (select fromid from #query1)'
              }
            },
            function(response) {   
                if(response.length > 0){                      
                  var comentarios = response[0].fql_result_set;
                  var comentarios_info = response[1].fql_result_set;
                  for(i=0;i<comentarios.length;i++){
                   var comentario = comentarios[i];                   
                   var div = $("#comentario_usuario").html().replace("#descricao",comentario.text);
                   
                   var thumbUrl = _.find(comentarios_info, function(info){ return info.uid == comentario.fromid}).pic_square;                   
                   div = div.replace("#thumbUrl",thumbUrl);
                   
                   var data = new Date(comentario.time*1000);
                   div = div.replace("#data",data.format("dd/mm/yyyy"));               
                   $(".comentarios_fb").append(div);
                  }                      
                }
            }                
          );  
          
          
</script>
