    <div id="header">
      <div class="container">
        <h1>
          <a href="/">
            <p class="logo_home">Agenda<span>tech</span></p>
          </a>
        </h1>
        <h3>Eventos de tecnologia no Brasil</h3>

        <% if user_signed_in? %>
          <div id="user_logged">
            Usuário: 
            <%= current_user.nickname %>, 
            <%= link_to "Sair", destroy_user_session_path %>
          </div>
          <div style="clear:right"></div>
        <% end %>
      </div>

      <div id="menu">
        <ul>
          <% unless user_signed_in? %>
            <li>
              <%= link_to "Login com twitter", "/auth/twitter" %>
              <span class="check"></span>
            </li>
          <% end %>
          <li><%= tab_link_to 'RSS', feed_path('rss') %></li>
          <li><%= tab_link_to "iCal", calendario_link_path %></li>
          <li><%= tab_link_to "Contato", contato_path %></li>
          <li><%= tab_link_to "Sobre", sobre_path %></li>
          <li><%= tab_link_to "Cursos", cursos_path(:ano => Time.now.year) %></li>
          <li><%= tab_link_to "Grupos",  grupos_path %></li>
          <li><%= tab_link_to "Eventos", eventos_path %></li>
        </ul>
      </div>

      <div style="clear:both"></div>
    </div>

    <div id="content">
      <div style="clear: both"></div>
      <div class="container">

        <% if flash[:aguarde] %>
          <p class="notice"><%=flash[:aguarde]%></p>
        <% end  %>					
        <!-- <a href="http://www.rubyconf.com.br/" target="_blank">
          <div id="banner"></div>
        </a> -->
        <%@banners.each do |banner|%>
          <div class="banner_quems">
            <p><%=banner.titulo.html_safe%></p>
            <br/>
            <hr>
            <%= link_to image_tag(banner.nome_imagem), evento_full_path(banner.evento) %>
            <p class="sub"><%=banner.descricao.html_safe%></p>
            <div style="clear: both;"></div>
            <%= eu_vou banner.evento, banner.gadget_info[:label], banner.gadget_info[:label_confirmacao], "st_banner",banner.tipo_gadget_associado %>
            <div style="clear: both;"></div>
            <% banner.evento.me_da_gadgets.do_tipo(banner.tipo_gadget_associado).each do |gadget| %>
            <div class="quem_vai_pic">
              <%= link_to  (image_tag link_da_imagem_do_twitter_para("#{user_name gadget}.#{extension gadget}"), :size => "25x25"), atividades_do_usuario_path(user_name gadget) %>
            </div>
    		                <%end%>
            
    		        </div>
    		   <%end%>
    		       		       		       		   				
					


        <div id="left" >
        <!--p class="breadcrumb"><% if @mes %>Eventos em <%= @mes %><% end %></p>
        <p class="breadcrumb"><% if @tag %>Eventos de <%= @tag	%><% end %></p-->

          <%= yield %>

        </div>
        <div id="right" >

					<!-- <p class="bignumber">
											<span>101</span> eventos 
										</p> -->


          <FORM>
            <INPUT TYPE="BUTTON" VALUE="Cadastrar novo evento" class="botao" style="width: 230px;"
            ONCLICK="window.location.href='<%= new_evento_path %>'">
          </FORM>
          <br/> 
          <FORM>
            <INPUT TYPE="BUTTON" VALUE="Cadastrar novo grupo" class="botao" style="width: 230px;"
            ONCLICK="window.location.href='<%= new_grupo_path %>'">
          </FORM>


          <br/>

          <div id="about">
            <div class="inner">


              <p><strong>A Agendatech busca facilitar o networking dos profissionais
                de tecnologia do Brasil.</strong></p>
              <p>Cadastre todos os eventos de todos os estados, dojos, palestras, encontros de grupos de usuários, etc.
              </p>
            </div>

          </div>


           <div id="facebook">
              <%=facebook_like_button%>
          </div>          
          <br/><br/>

          <div id="mes">
            <div class="header">
              <p>Últimos comentários</p>              
            </div>
            <div class="inner comentarios_fb">
              <div style="display:none" id="comentario_usuario">
                <p class="comentario_descricao">#descricao</p>
								<img src="/images/buble.gif" class="buble"/>
                <img src="#thumbUrl" width="25" heigth="25"/>
								<p class="comentario_data">Enviado em #data</p>
            </div>  
            </div>
          </div>

          <a href="http://www.twitter.com/agendatech" target="_blank">
          <div id="twitter_bg">
            <div class="tweet">

            </div>
          </div>
          </a>

          <% meses_com_total,total = meses_com_total_de_eventos%>
          <div id="mes">
            <div class="header">
              <p class="bold">Eventos por mês (<%=total%>)</p><br />
            </div>

            <div class="inner">
              <div class="left">
                <%(1..6).each do |numero| %>
                  <p><%= link_to "#{meses.key(numero)} (#{meses_com_total[numero]})"  , eventos_por_mes_path(:ano => Time.now.year, :month => "#{meses.key(numero)}") %></p>
                <%end%>
              </div>

              <div class="">
                <%(7..12).each do |numero| %>
                  <p><%= link_to "#{meses.key(numero)} (#{meses_com_total[numero]})"  , eventos_por_mes_path(:ano => Time.now.year, :month => "#{meses.key(numero)}") %></p>
                <%end%>
              </div>
            </div>
          </div>




          <% estados,total = estados_com_total_de_eventos%>
              <div id="estado">
                  <div class="header">
                    <p>Eventos por Estado (<%=total%>)</p>
                  </div>
                  <div class="inner">
                    <% for sigla in estados.keys %>
                      <p>
                      <%= link_to "#{nome_do_estado(sigla)}(#{estados[sigla]})", eventos_por_estado_path(:estado => nome_do_estado(sigla)) %>
                      </p>
                    <% end %>
